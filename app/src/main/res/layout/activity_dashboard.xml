<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="dashboardViewModel"
        type="co.za.immedia.superheroapp.features.dashboard.DashboardViewModel"/>
</data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clCParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.dashboard.DashboardActivity">

    <TextView
        style="@style/DarkMediumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hero"
        android:text="@{dashboardViewModel.superHero.name}"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>