<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewSuperheroViewModel"
            type="co.za.immedia.superheroapp.features.superhero.ViewSuperheroViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fitsSystemWindows="true"
        tools:context=".features.superhero.ViewSuperheroActivity"
        android:background="@color/lightBackground">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
            android:fitsSystemWindows="true"
            android:elevation="0dp"
            app:elevation="0dp"
            android:background="@color/lightBackground">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="@color/lightBackground"
                app:expandedTitleMarginStart="20dp"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginBottom="15dp"
                app:expandedTitleTextAppearance="@style/CollapsedAppBarLargeDark"
                app:title="@{viewSuperheroViewModel.outlet.tradingName}"
                android:fitsSystemWindows="true"
                android:elevation="0dp">

                <ImageView
                    android:id="@+id/imgHostPic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_place_holde_dark"
                    app:layout_collapseMode="parallax"
                    android:layout_marginBottom="50dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="top"
                    android:background="@color/transBlack2"/>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:popupTheme="@style/AppTheme"
                    app:navigationIcon="@drawable/rounde_back"
                    app:layout_collapseMode="pin"
                    app:titleTextColor="@color/darkText"
                    app:title=" Title"
                    app:elevation="0dp"
                    android:elevation="0dp"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/llEditContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/medium__margin">

                <LinearLayout
                    android:id="@+id/llDiscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/small_margin"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/lightestBackground">

                    <TextView
                        style="@style/MediumGreyTextView"
                        android:id="@+id/txtDescription"
                        android:layout_width="match_parent"
                        tools:text="Host description"
                        android:text="@{viewSuperheroViewModel.outlet.description}"
                        android:gravity="left"
                        android:layout_marginHorizontal="@dimen/medium__margin"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvP1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:elevation="0dp"
                    android:layout_margin="@dimen/xsmall_margin"
                    android:background="@color/lightestBackground"
                    app:layout_constraintTop_toBottomOf="@+id/llDiscription">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ccProduct"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:paddingLeft="@dimen/xsmall_margin"
                        android:background="@color/lightestBackground"
                        android:onClick="onProductClicked">

                        <TextView
                            android:id="@+id/tvLocationName"
                            style="@style/MediumDarkTextView"
                            android:layout_width="0dp"
                            android:text="Beef burger"
                            android:maxLines="1"
                            android:gravity="left"
                            android:layout_marginTop="@dimen/xsmall_margin"
                            android:layout_marginRight="@dimen/xsmall_margin"
                            app:layout_constraintTop_toTopOf="@+id/imgPreview"
                            app:layout_constraintRight_toLeftOf="@+id/imgPreview"
                            app:layout_constraintLeft_toLeftOf="parent"/>


                        <TextView
                            style="@style/MediumDarkTextView"
                            android:id="@+id/txtPrice"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:text="R90.00"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintRight_toLeftOf="@+id/imgPreview"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvLocationName"/>


                        <TextView
                            android:id="@+id/tvLocationDescription"
                            style="@style/SmallGreyTextView"
                            android:layout_width="0dp"
                            android:gravity="left"
                            android:maxLines="2"
                            app:layout_constraintVertical_bias="0"
                            android:layout_marginRight="@dimen/xsmall_margin"
                            android:layout_marginTop="@dimen/xsmall_margin"
                            android:text="Location description ation description on des crription ation description on des cr"
                            app:layout_constraintTop_toBottomOf="@+id/txtPrice"
                            app:layout_constraintRight_toLeftOf="@+id/imgPreview"
                            app:layout_constraintLeft_toLeftOf="parent"/>


                        <ImageView
                            android:id="@+id/imgPreview"
                            android:background="@color/lightBackground"
                            android:layout_width="120dp"
                            android:layout_height="0dp"
                            android:src="@drawable/burger"
                            android:scaleType="centerCrop"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:elevation="0dp"
                    android:layout_margin="@dimen/xsmall_margin"
                    android:background="@color/lightestBackground"
                    app:layout_constraintTop_toBottomOf="@+id/cvP1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ccProduct2"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:paddingLeft="@dimen/xsmall_margin"
                        android:background="@color/lightestBackground"
                        android:onClick="onProductClicked2">

                        <TextView
                            android:id="@+id/tvLocationName2"
                            style="@style/MediumDarkTextView"
                            android:layout_width="0dp"
                            android:text="Full chicken"
                            android:maxLines="1"
                            android:gravity="left"
                            android:layout_marginTop="@dimen/xsmall_margin"
                            android:layout_marginRight="@dimen/xsmall_margin"
                            app:layout_constraintTop_toTopOf="@+id/imgPreview2"
                            app:layout_constraintRight_toLeftOf="@+id/imgPreview2"
                            app:layout_constraintLeft_toLeftOf="parent"/>


                        <TextView
                            style="@style/MediumDarkTextView"
                            android:id="@+id/txtDistance2"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:text="R65.00"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintVertical_bias="0"
                            app:layout_constraintRight_toLeftOf="@+id/imgPreview2"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvLocationName2"
                            app:layout_constraintBottom_toBottomOf="@+id/imgPreview2"/>

                        <TextView
                            android:id="@+id/tvLocationDescription2"
                            style="@style/SmallGreyTextView"
                            android:layout_width="0dp"
                            android:gravity="left"
                            android:maxLines="2"
                            app:layout_constraintVertical_bias="0"
                            android:layout_marginTop="@dimen/xsmall_margin"
                            android:layout_marginRight="@dimen/xsmall_margin"
                            android:text=""
                            app:layout_constraintTop_toBottomOf="@+id/txtDistance2"
                            app:layout_constraintRight_toLeftOf="@+id/imgPreview2"
                            app:layout_constraintLeft_toLeftOf="parent"/>


                        <ImageView
                            android:id="@+id/imgPreview2"
                            android:background="@color/lightBackground"
                            android:layout_width="120dp"
                            android:layout_height="0dp"
                            android:src="@drawable/full_chicken"
                            android:scaleType="centerCrop"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>