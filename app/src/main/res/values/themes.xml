<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SuperHeroApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="NoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash_background</item>
    </style>

    <style name="BaseTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="LargeTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/large_text</item>
    </style>
    <style name="LightLargeTextView" parent="LargeTextView">
        <item name="android:textColor">@color/light_text</item>
    </style>
    <style name="MediumTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/medium_text</item>
    </style>
    <style name="LightMediumTextView" parent="MediumTextView">
        <item name="android:textColor">@color/light_text</item>
    </style>
    <style name="DarkMediumTextView" parent="MediumTextView">
        <item name="android:textColor">@color/dark_text</item>
    </style>
    <style name="GreyMediumTextView" parent="MediumTextView">
        <item name="android:textColor">@color/grey_text</item>
    </style>
    <style name="SmallTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/small_text</item>
    </style>
    <style name="SearchEditText">
        <item name="android:textColorHint">@color/grey_text</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:paddingRight">@dimen/small_margin</item>
        <item name="android:paddingTop">@dimen/xsmall_margin</item>
        <item name="android:paddingBottom">@dimen/xsmall_margin</item>
    </style>
    <style name="CollapsedAppBarLargeDark">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>